/* pages/sticky.wxss */
.reference {
	position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 1rpx;
    background: transparent;
    pointer-events: none; 
}

.top-container {
	height: 400rpx;
	background: #aaa;
}

.sticky-container {
	position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fefefe;
    z-index: 10;
}

.sticky-container .p_info {
	background: #fff;
    box-shadow: 0 20rpx 20rpx #eee;
}

.title{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	text-align: center;
	font-weight: bold;
	color: #ff684a;
}

.item {
	padding: 10rpx 20rpx;
	text-align: center;
	background: rgb(250, 193, 5);
	color: #000;
	border-bottom: 1px solid #eee;
}